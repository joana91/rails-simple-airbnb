<h1><strong>All our Flats</strong></h1>
<% @flats.each do |flat| %>
  <p><%= flat.name %></p>
  <p><%= flat.address %></p>
  <p><%= flat.description %></p>
  <p><%= flat.price_per_night %></p>
  <p><%= flat.number_of_guests %></p>
  <p><%= link_to "More info", flat_path(flat.id) %></p>
  <p><%= link_to "Edit", edit_flat_path(flat.id) %></p>
  <p><%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?"}  %></p>
<% end %>
